<% form_for :user, :url => {:action => "reset_password"} do |form| %>
        <fieldset>
     <legend>Resetar senha</legend>
     
            <p>
                <label for="user_password" >Senha</label><br/>
                <%= form.password_field :password, :size => 45, :class => 'text' %>
      </p>
      <p>
                <label for="user_password_confirmation" >Confirme senha</label><br/>
                <%= form.password_field :password_confirmation, :size => 45, :class => 'text' %>
            </p>
            <%= submit_tag "Resetar senha" %>
        </fieldset>
    <% end %>