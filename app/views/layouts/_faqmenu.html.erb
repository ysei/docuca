<ul class="topics">
	<% @faq_categories = faq_categories%>
	<% @faq_categories.each do |category| %>
		<li><%= link_to_remote truncate(category.name,100), 
		:update => 'content',
		:url => {:controller => 'faq', :action => 'show',  :id => category.id} ,
		:method => :get,
		:before   => %(Element.show("spinner_#{category.id}")),
	 	:success  => %(Element.hide("spinner_#{category.id}"))
		%>
		<%= image_tag 'spinner.gif',:class=> 'spinner', :id => "spinner_#{category.id}", :style => 'display: none' %>
		</li>
		<!-- no ajax - for debugging
		<li>
			<%= link_to "#{category.name} (non-AJAX)",faq_path(category) %>
		</li> -->
	<% end%>
</ul>

